<div class="table-responsive">
    <table class="table">
        <thead>
        <tr>
            <th scope="col">User</th>
            {% for label in chart.data.labels %}
                <th scope="col">{{ label }}</th>
            {% endfor %}
        </tr>
        </thead>
        <tbody>
        {% for dataset in chart.data.datasets %}
            <tr>
                <th scope="row">{{ dataset.label }}</th>
                {% for data in dataset.data %}
                    <td>{{ data }}</td>
                {% endfor %}
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>