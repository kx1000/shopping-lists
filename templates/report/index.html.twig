{% extends 'base.html.twig' %}

{% block title %}Report{% endblock %}

{% block body %}
    <h3 class="mt-3">Users Summary</h3>
    <div class="bg-light p-3 rounded mb-3">
        {{ render_chart(users_chart) }}
    </div>

    <div class="bg-light p-3 rounded mb-3">
        {% include 'report/_summary_table.html.twig' with { chart: users_chart } %}
    </div>

    <h3 class="mt-3">Categories Summary</h3>
    <div class="bg-light p-3 rounded mb-3">
        {{ render_chart(categories_chart) }}
    </div>

    <div class="bg-light p-3 rounded mb-4">
        {% include 'report/_summary_table.html.twig' with { chart: categories_chart } %}
    </div>
{% endblock %}
