{% extends 'base.html.twig' %}

{% block title %}Report{% endblock %}

{% block body %}
    <h3 class="mt-3">Users Summary</h3>
    <div class="bg-light p-3 rounded mb-3">
        {{ render_chart(users_chart) }}
    </div>

    <div class="bg-light p-3 rounded mb-3">
        <div class="table-responsive">
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">User</th>
                    {% for label in users_chart.data.labels %}
                        <th scope="col">{{ label }}</th>
                    {% endfor %}
                </tr>
                </thead>
                <tbody>
                {% for dataset in users_chart.data.datasets %}
                    <tr>
                        <th scope="row">{{ dataset.label }}</th>
                        {% for data in dataset.data %}
                            <td>{{ data }}</td>
                        {% endfor %}
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <h3 class="mt-3">Categories Summary</h3>
    <div class="bg-light p-3 rounded mb-3">
        {{ render_chart(categories_chart) }}
    </div>
{% endblock %}
