<form method="post" action="{{ path('shopping_list_delete', {'id': shopping_list.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ shopping_list.id) }}">
    <button class="btn">Delete</button>
</form>
